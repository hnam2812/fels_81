<div class="row">
  <aside class="col-md-4">
    <section class="user_info entry_form">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name.upcase %>
      </h1>
    </section>
    <%= render "shared/stats" %>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
